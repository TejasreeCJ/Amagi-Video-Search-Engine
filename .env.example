# Pinecone Configuration
PINECONE_API_KEY=your_pinecone_api_key_here
PINECONE_ENVIRONMENT=us-east-1-aws
PINECONE_INDEX_NAME=nptel-video-search

# Optional: YouTube API (for additional features)
YOUTUBE_API_KEY=your_youtube_api_key_here

# Whisper Configuration (for transcript generation)
# Set to true to enable Whisper transcript generation for videos without subtitles
WHISPER_ENABLED=false

# Whisper model size options: tiny, base, small, medium, large
# tiny: ~39 MB, fastest, lowest accuracy
# base: ~74 MB
# small: ~244 MB
# medium: ~769 MB  
# large: ~1550 MB, slowest, highest accuracy
WHISPER_MODEL_SIZE=tiny

# Whisper language (auto-detect if not specified)
WHISPER_LANGUAGE=en